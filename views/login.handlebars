<div class="card">
  <div class="card-header">
    <h3>Login</h3>
  </div>
  <form id="login-form" class="card-body">
    <div>
      <h4 for="username-input-login">Username</h4>
      <input type="text" id="username-input-login" />
    </div>
    <div>
      <h4 for="password-input-login" class="form-label"style="font: size 25px;margin: bottom 5px;">Password</h4>
      <input type="password" id="password-input-login" />
    </div>
    <button type="submit" id="login-btn" class="btn"style="margin-bottom:15px">Login!</button>
    <a type="button" href="/signup">Sign up instead</a>
  </form>
</div>

<script src="/js/login.js"></script>